<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>跳转验证</title>
    <style>
        /* 保持黑底白字极简风格 */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
        }
        
        body {
            background-color: #000000;
            color: #ffffff;
            min-height: 100vh;
            padding: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        
        .jump-container {
            width: 100%;
            max-width: 400px;
            background: #000000;
            border: 1px solid #333333;
        }
        
        .jump-header {
            padding: 25px;
            border-bottom: 1px solid #333333;
            text-align: center;
        }
        
        .jump-header h1 {
            font-size: 22px;
            font-weight: 300;
            color: #ffffff;
            letter-spacing: 1px;
        }
        
        .jump-header .subtitle {
            font-size: 13px;
            color: #888888;
            margin-top: 8px;
        }
        
        .jump-content {
            padding: 30px;
        }
        
        /* 跳转表单 */
        .jump-form {
            display: block;
        }
        
        .form-group {
            margin-bottom: 25px;
        }
        
        .form-label {
            display: block;
            margin-bottom: 10px;
            color: #cccccc;
            font-size: 14px;
        }
        
        .form-input {
            width: 100%;
            padding: 14px;
            border: 1px solid #333333;
            background: #000000;
            color: #ffffff;
            font-size: 15px;
            outline: none;
            transition: border-color 0.2s;
        }
        
        .form-input:focus {
            border-color: #666666;
        }
        
        .form-input.error {
            border-color: #ff4444;
        }
        
        .error-message {
            color: #ff4444;
            font-size: 13px;
            margin-top: 8px;
            display: none;
        }
        
        .error-message.show {
            display: block;
        }
        
        .jump-btn {
            width: 100%;
            background: #000000;
            color: #ffffff;
            border: 1px solid #333333;
            padding: 14px;
            font-size: 15px;
            cursor: pointer;
            transition: all 0.2s;
        }
        
        .jump-btn:hover {
            background: #111111;
            border-color: #666666;
        }
        
        .jump-btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }
        
        /* 操作反馈 */
        .feedback {
            padding: 12px;
            margin-bottom: 20px;
            border: 1px solid;
            display: none;
            font-size: 13px;
        }
        
        .feedback.show {
            display: block;
        }
        
        .feedback.success {
            color: #00cc00;
            border-color: #00cc00;
            background: rgba(0, 204, 0, 0.05);
        }
        
        .feedback.error {
            color: #ff4444;
            border-color: #ff4444;
            background: rgba(255, 68, 68, 0.05);
        }
        
        /* 加载动画 */
        .loading {
            text-align: center;
            padding: 20px;
            display: none;
        }
        
        .loading.show {
            display: block;
        }
        
        .spinner {
            display: inline-block;
            width: 20px;
            height: 20px;
            border: 2px solid #333333;
            border-top-color: #ffffff;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin-right: 10px;
            vertical-align: middle;
        }
        
        @keyframes spin {
            to { transform: rotate(360deg); }
        }
        
        /* 说明文字 */
        .instructions {
            color: #666666;
            font-size: 12px;
            margin-top: 20px;
            text-align: center;
            line-height: 1.5;
            border-top: 1px solid #222222;
            padding-top: 15px;
        }
        
        /* 锁定时长提示 */
        .lockout-timer {
            color: #ff4444;
            font-size: 12px;
            margin-top: 8px;
            display: none;
        }
        
        .lockout-timer.show {
            display: block;
        }
        
        /* 响应式设计 */
        @media (max-width: 480px) {
            .jump-container {
                border: none;
            }
            
            .jump-content {
                padding: 20px;
            }
            
            .jump-header {
                padding: 20px;
            }
        }
    </style>
</head>
<body>
    <div class="jump-container">
        <div class="jump-header">
            <h1>墨谭聊天室</h1>
            <div class="subtitle">密码验证后进入</div>
        </div>
        
        <div class="jump-content">
            <!-- 操作反馈 -->
            <div class="feedback error" id="errorFeedback"></div>
            
            <!-- 跳转表单 -->
            <div class="jump-form" id="jumpForm">
                <div class="form-group">
                    <label class="form-label">请输入访问密码</label>
                    <input type="password" 
                           class="form-input" 
                           id="passwordInput" 
                           placeholder="请输入8位数字密码"
                           autocomplete="off"
                           maxlength="8">
                    <div class="error-message" id="passwordError">密码错误</div>
                    <div class="lockout-timer" id="lockoutTimer"></div>
                </div>
                
                <button class="jump-btn" id="jumpBtn">进入聊天室</button>
            </div>
            
            <!-- 加载状态 -->
            <div class="loading" id="loading">
                <div class="spinner"></div>
                <span>正在跳转，请稍候...</span>
            </div>
        </div>
    </div>
    
    <script>
        // ==================== 跳转配置 ====================
        const JUMP_CONFIG = {
            // 访问密码
            PASSWORD: '00000000',
            
            // 跳转目标
            TARGET_URL: 'chat.html',
            
            // 安全配置
            MAX_ATTEMPTS: 5,
            LOCKOUT_DURATION: 10 * 60 * 1000, // 10分钟
            REDIRECT_DELAY: 800 // 跳转延迟(毫秒)
        };

        // ==================== 跳转应用类 ====================
        class JumpApp {
            constructor() {
                this.attempts = 0;
                this.isLocked = false;
                this.lockoutTime = null;
                
                this.init();
            }
            
            // 初始化
            init() {
                this.checkLockout();
                this.setupEventListeners();
                
                // 自动聚焦密码输入框
                setTimeout(() => {
                    document.getElementById('passwordInput').focus();
                }, 300);
            }
            
            // 检查是否被锁定
            checkLockout() {
                const lockoutEnd = localStorage.getItem('jump_lockout_end');
                if (lockoutEnd) {
                    const endTime = parseInt(lockoutEnd);
                    if (Date.now() < endTime) {
                        this.isLocked = true;
                        this.lockoutTime = endTime;
                        this.updateLockoutTimer();
                        this.disableInput();
                    } else {
                        localStorage.removeItem('jump_lockout_end');
                        localStorage.removeItem('jump_attempts');
                    }
                }
                
                this.attempts = parseInt(localStorage.getItem('jump_attempts') || '0');
            }
            
            // 更新锁定计时器
            updateLockoutTimer() {
                if (!this.isLocked) return;
                
                const remaining = Math.ceil((this.lockoutTime - Date.now()) / 1000);
                if (remaining <= 0) {
                    this.isLocked = false;
                    localStorage.removeItem('jump_lockout_end');
                    document.getElementById('lockoutTimer').classList.remove('show');
                    this.enableInput();
                    return;
                }
                
                const minutes = Math.floor(remaining / 60);
                const seconds = remaining % 60;
                
                const timerElement = document.getElementById('lockoutTimer');
                timerElement.textContent = `输入错误过多，请${minutes}分${seconds}秒后再试`;
                timerElement.classList.add('show');
                
                setTimeout(() => this.updateLockoutTimer(), 1000);
            }
            
            // 处理跳转
            handleJump() {
                if (this.isLocked) {
                    this.showError('输入错误过多，请稍后再试');
                    return;
                }
                
                const passwordInput = document.getElementById('passwordInput');
                const password = passwordInput.value;
                
                if (!password) {
                    this.showError('请输入密码');
                    passwordInput.focus();
                    return;
                }
                
                if (password === JUMP_CONFIG.PASSWORD) {
                    this.jumpSuccess();
                } else {
                    this.jumpFailure();
                }
            }
            
            // 跳转成功
            jumpSuccess() {
                // 重置尝试次数
                this.attempts = 0;
                localStorage.removeItem('jump_attempts');
                localStorage.removeItem('jump_lockout_end');
                
                // 显示加载状态
                document.getElementById('jumpForm').style.display = 'none';
                document.getElementById('loading').classList.add('show');
                
                // 延迟跳转，让用户看到成功状态
                setTimeout(() => {
                    window.location.href = JUMP_CONFIG.TARGET_URL;
                }, JUMP_CONFIG.REDIRECT_DELAY);
            }
            
            // 跳转失败
            jumpFailure() {
                this.attempts++;
                localStorage.setItem('jump_attempts', this.attempts.toString());
                
                const errorElement = document.getElementById('passwordError');
                errorElement.classList.add('show');
                
                // 清空输入框
                document.getElementById('passwordInput').value = '';
                document.getElementById('passwordInput').focus();
                
                if (this.attempts >= JUMP_CONFIG.MAX_ATTEMPTS) {
                    this.lockAccess();
                } else {
                    const remaining = JUMP_CONFIG.MAX_ATTEMPTS - this.attempts;
                    this.showError(`密码错误，还剩${remaining}次尝试`);
                }
            }
            
            // 锁定访问
            lockAccess() {
                this.isLocked = true;
                this.lockoutTime = Date.now() + JUMP_CONFIG.LOCKOUT_DURATION;
                localStorage.setItem('jump_lockout_end', this.lockoutTime.toString());
                
                this.disableInput();
                this.updateLockoutTimer();
                this.showError('尝试次数过多，访问已锁定10分钟');
            }
            
            // 禁用输入
            disableInput() {
                document.getElementById('passwordInput').disabled = true;
                document.getElementById('jumpBtn').disabled = true;
            }
            
            // 启用输入
            enableInput() {
                document.getElementById('passwordInput').disabled = false;
                document.getElementById('jumpBtn').disabled = false;
                document.getElementById('passwordInput').focus();
            }
            
            // 设置事件监听器
            setupEventListeners() {
                const jumpBtn = document.getElementById('jumpBtn');
                const passwordInput = document.getElementById('passwordInput');
                
                // 跳转按钮点击事件
                jumpBtn.addEventListener('click', () => {
                    this.handleJump();
                });
                
                // 输入框回车事件
                passwordInput.addEventListener('keypress', (e) => {
                    if (e.key === 'Enter') {
                        this.handleJump();
                    }
                });
                
                // 输入时清除错误提示
                passwordInput.addEventListener('input', () => {
                    document.getElementById('passwordError').classList.remove('show');
                    document.getElementById('errorFeedback').classList.remove('show');
                });
                
                // 页面加载完成后自动聚焦
                window.addEventListener('load', () => {
                    setTimeout(() => {
                        passwordInput.focus();
                    }, 100);
                });
            }
            
            // 显示错误消息
            showError(message) {
                const errorElement = document.getElementById('errorFeedback');
                errorElement.textContent = message;
                errorElement.classList.add('show');
                
                // 自动隐藏错误提示
                setTimeout(() => {
                    errorElement.classList.remove('show');
                }, 4000);
            }
        }
        
        // 初始化跳转应用
        document.addEventListener('DOMContentLoaded', () => {
            window.jumpApp = new JumpApp();
        });
        
        // 添加一个简单的键盘快捷键：Ctrl+Enter 也可以提交
        document.addEventListener('keydown', (e) => {
            if (e.ctrlKey && e.key === 'Enter') {
                document.getElementById('jumpBtn').click();
            }
        });
    </script>
</body>
</html>